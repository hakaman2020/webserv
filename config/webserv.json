{
	"error_pages": {
		"404": "404.html",
		"403": "403.html",
		"500": "500.html"
	},

	"remote_control_server": {
		"listen": 6666
	},

	"servers": [
		{
			"listen": 4242,
			"host": "0.0.0.0",
			"server_names": ["*", "example"],
			"client_body_size": 1000,

			"error_pages": {
				"404": "404.html",
				"403": "403.html",
				"500": "500.html"
			},

			"locations": {
				"/": {
					"allowed_methods": ["GET"],
					"root": "var/www/html",
					"index": "index.html",
					"auto_index": true
				},
				"/images": {
					"redirect": "http://images.localhost:4242/"
				}
			}
		},

		{
			"listen": 4242,
			"server_names": ["images.127.0.0.1", "images.localhost", "images.10.11.4.4", "images.example"],

			"locations": {
				"/cgi": {
					"client_body_size": 10000,
					"allowed_methods": ["GET", "POST", "DELETE"],
					"root": "var/www/upload",
					"CGI": {
						".php": "/Users/ngerrets/.brew/bin/php-cgi",
						".js": "/js",
						".py": "python3"
					}
				}
			}
		}
	]
}
