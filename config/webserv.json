{
	"servers": [
		{
			"listen": 8080,
			"host": "0.0.0.0",
			"server_names": ["f1r5s17.codam.nl"],
			"index": "index.html",

			"error_pages": {
				"404": "error_pages/404.html",
				"403": "error_pages/403.html",
				"405": "error_pages/405.html",
				"500": "error_pages/500.html"
			},

			"allowed_methods": ["GET"],

			"root": "var/www/html",

			"locations": {
				"/cgi-bin/": {
					"client_body_size": 0,
					"allowed_methods": ["GET", "POST"],
					"index": "",
					"auto_index": true,
					"CGI": [".py", ".cgi"]
				},
				"/upload/": {
					"redirect": "http://files.f1r5s17.codam.nl:8080/"
				},
				"/files/": {
					"redirect": "http://files.f1r5s17.codam.nl:8080/"
				}
			}
		},
		{
			"listen": 8080,
			"host": "0.0.0.0",
			"server_names": ["files.localhost"],
			"client_body_size": 1000,
			"root": "var/www/upload",

			"locations": {
				"/": {
					"allowed_methods": ["GET", "POST"],
					"index": "delete.cgi",
					"CGI": [".cgi"]
				},
				"/files/": {
					"allowed_methods": ["GET", "DELETE"],
					"index": "",
					"auto_index": true
				}
			}
		},
		{
			"listen": 8080,
			"host": "0.0.0.0",
			"server_names": ["sitemap.localhost"],
			"client_body_size": 0,
			"index": "",
			"auto_index": true,
			"root": "var/www/html",

			"allowed_methods": ["GET"]
		}
	]
}
