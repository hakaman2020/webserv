{
	"error_pages": {
		"404": "404.html",
		"403": "403.html",
		"500": "500.html"
	},

	"remote_control_server": {
		"listen": 6666
	},

	"servers": [
		{
			"listen": 8080,
			"host": "0.0.0.0",
			"server_names": ["localhost"],
			"client_body_size": 100000000,
			"index": "",

			"error_pages": {
				"404": "404.html",
				"403": "403.html",
				"500": "500.html",
				"405": "405.html"
			},

			"allowed_methods": ["GET"],

			"root": "var/www/html",

			"locations": {
				"/": {
					"allowed_methods": ["GET", "POST"],
					"root": "var/www/html",
					"index": "",
					"auto_index": true,
					"CGI": [".py"]
				},
				"/redirect/": {
					"redirect": "../pages/"
				}
			}
		},
		{
			"listen": 8080,
			"host": "0.0.0.0",
			"server_names": ["files.localhost"],
			"client_body_size": 1000,
			"index": "",

			"error_pages": {
				"404": "404.html",
				"403": "403.html",
				"405": "405.html",
				"500": "500.html"
			},

			"root": "var/www/upload",

			"locations": {
				"/": {
					"allowed_methods": ["GET", "DELETE"],
					"index": "",
					"auto_index": true
				}
			}
		}
	]
}
