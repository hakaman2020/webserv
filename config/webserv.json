{
	"error_pages": {
		"404": "404.html",
		"403": "403.html",
		"500": "500.html"
	},

	"remote_control_server": {
		"listen": 6666
	},

	"servers": [
		{
			"listen": 9000,
			"host": "0.0.0.0",
			"server_names": ["localhost", "hello.com"],
			"client_body_size": 1000,
			"index": "",

			"error_pages": {
				"404": "404.html",
				"403": "403.html",
				"500": "500.html"
			},

			"root": "var/www/html",

			"locations": {
				"/": {
					"allowed_methods": ["GET"],
					"root": "var/www/html",
					"index": "index.html",
					"auto_index": true
				},
				"/images/": {
					"auto_index": true
				},

				"/images/folder/": {
				},
				"/pages/":{
					"auto_index": true
				}

			}
		},

		{
			"listen": 9090,
			"server_names": ["images.127.0.0.1", "images.localhost", "images.10.11.4.4", "images.example"],

			"locations": {
				"/": {
					"client_body_size": 10000,
					"allowed_methods": ["GET", "POST", "DELETE"],
					"root": "var/www/upload"
				}
			}
		}
	]
}
